extends dashboard.pug
mixin membre(nom, prenom, role, etablissement)
    tr
        td
            a(href='')=prenom + ' ' + nom
        td=role
        td=etablissement

block content
    if(resultats)
        - var format_date = function(date) { return date.substring(6,8) + '/' + date.substring(4,6) + '/' + date.substring(0,4)};
            .content-page
                .content
                    .container
                        .jumbotron
                            h1 #{resultats[0][0].prenom} #{resultats[0][0].nom}
                    .container
                        .row
                            .col-md-12
                                h4.page-header.header-title Informations personnelles
                        .row
                            .card-box
                                .row(style='margin-bottom:15px')
                                    a.btn.btn-icon.btn-default.pull-right(href='./updatedoct/'+`${resultats[0][0]._id}`)
                                        i.fa.fa-wrench
                                        span   Modifier les informations personnelles
                                .row
                                    .col-md-3
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Nom
                                            .panel-body
                                                p #{resultats[0][0].nom}                        
                                    .col-md-3
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Prenom
                                            .panel-body
                                                p #{resultats[0][0].prenom}
                                    .col-md-3
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Téléphone
                                            .panel-body
                                                p #{resultats[0][0].telephone}
                                    .col-md-3
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Adresse email
                                            .panel-body
                                                p #{resultats[0][0].mail}
                        .row
                            .col-md-12
                                h4.page-header.header-title Thèse
                        .row
                            .card-box
                                .row(style='margin-bottom:15px')
                                    a.btn.btn-icon.btn-default.pull-right(href='./updatethese/'+`${resultats[0][1]._id}`)
                                        i.fa.fa-wrench
                                        span   Modifier la thèse
                                .row
                                    .col-md-2
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Type de thèse
                                            .panel-body
                                                p #{resultats[0][1].type_these}
                                    .col-md-2
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Domaine
                                            .panel-body
                                                p #{resultats[0][1].domaine}
                                    .col-md-8
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Intitulé de thèse
                                            .panel-body
                                                p #{resultats[0][1].intitule}
                                    .col-md-4
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Date de début
                                            .panel-body
                                                p= format_date(`${resultats[0][2].date_debut}`)
                                    .col-md-4
                                        .panel.panel-border.panel-custom
                                            .panel-heading
                                                h3.panel-title Date de soutenance
                                            .panel-body
                                                p= format_date(`${resultats[0][2].date_fin}`)
                        .row
                            .col-md-12
                                h4.page-header.header-title Membres du jury                                
                        .row
                            .card-box
                                a.btn.btn-icon.btn-default.pull-right(href='./updatelistjury')
                                    i.fa.fa-wrench
                                    span   Modifier le jury
                                table.table.table-striped
                                    thead
                                        tr
                                            th Nom & prénom
                                            th Rôle
                                            th Etablissement
                                    tbody
                                        for res in resultats
                                            +membre(`${res[3].nom}`, `${res[3].prenom}`, `${res[4]}`, `${res[3].etablissement}`)