extends layout.pug
mixin doct(nom, prenom, intitul, id)
    .masonry-item
        .card-box.masonry-well
            h2= prenom + ' ' + nom
            p= intitul
                p
                    a.btn.btn-primary(href=`dashboard/`+id, role='button') Détails &raquo;

block body
    if(user)
        #wrapper
            .topbar
                .topbar-left
                    .text-center
                        a.logo(href='/dashboard')
                            i.icon-magnet.icon-c-logo
                            span Phd
                                i.md.md-album(style='padding: 0 7px')
                                |Management
                .navbar.navbar-default(role='navigation')
                    .container
                        div
                            ul.nav.navbar-nav.navbar-right.pull-left
                                li
                                    a(href='') Doctorants
                                li
                                    a(href='') Membres de jury
                                li
                                    a(href='') Articles
                                li
                                    a(href='') Soutenance
                            ul.nav.navbar-nav.navbar-right.pull-right
                                li.dropdown.top-menu-item-xs
                                    a.dropdown-toggle.profile.waves-effect.waves-light(href='', data-toggle='dropdown', aria-expanded='true')
                                        img.img-circle(src='/bootstrap-3.3.7-dist/images/avatar-1.png', alt='Omar Boussaid')
                                    ul.dropdown-menu
                                        li
                                            a(href='')
                                                i.ti-user.m-r-10.text-custom
                                                |Bienvenue #{user.displayName}
                                        li.divider
                                        li
                                            a(href='logout')
                                                i.ti-power-off.m-r-10.text-danger
                                                |Déconnexion
            block content    
                .content-page
                    .content
                        .container
                            .jumbotron
                                h1 Doctorants
                        .container
                            .masonry-row
                                if resultats.length
                                    for doc in resultats
                                        +doct(`${doc.nom}`, `${doc.prenom}`, `${doc.intitule}`,`${doc.idDoct}`)